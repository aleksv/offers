            <VBox fx:id="itemsVbox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
         </content>
      </ScrollPane>
      <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#onAddItemButton" text="+" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="TOP" />
