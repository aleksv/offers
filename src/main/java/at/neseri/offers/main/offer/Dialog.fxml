      </Label>
      <Label prefHeight="25.0" prefWidth="1000.0" text="ID" GridPane.hgrow="ALWAYS">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label prefHeight="25.0" prefWidth="1000.0" text="Betreff" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="subjectTextfield" maxHeight="25.0" maxWidth="500.0" prefHeight="25.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
